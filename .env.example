# ================================
# Development Environment Variables
# ================================

# Rails Configuration
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
SECRET_KEY_BASE=development-secret-key-base-change-in-production
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5

# Database Configuration
DATABASE_URL=sqlite3:db/development.sqlite3
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@postgres:5432/myapp_development

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# Flutter Configuration
FLUTTER_ENV=development
API_BASE_URL=http://rails:3000
FLUTTER_WEB_PORT=8080
FLUTTER_WEB_HOSTNAME=0.0.0.0

# MailCatcher Configuration
MAILCATCHER_HOST=mailcatcher
SMTP_PORT=1025

# ================================
# Production Environment Variables
# ================================

# Rails Production
# RAILS_ENV=production
# SECRET_KEY_BASE=your-production-secret-key-generate-with-rails-secret
# DATABASE_URL=postgresql://user:password@db-host:5432/myapp_production
# RAILS_LOG_LEVEL=info

# AWS S3 (for Active Storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-northeast-1
# AWS_BUCKET=your-bucket-name

# Email Configuration (Production)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=yourdomain.com
# SMTP_USER_NAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ================================
# Docker Build Args
# ================================

RUBY_VERSION=3.4.5
RAILS_VERSION=8.0.2.1
NODE_VERSION=20
FLUTTER_VERSION=3.32.5